<h2>User login..</h2>
  <div class="col-md-8 col md-offset-3 well">
    <%=form_tag '/login' do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%=text_field_tag(:email ,nil,  {:class=>'form-control'})%>
      </div>
      <div class="form-group">
        <%=label_tag :password %>
        <%=password_field_tag(:password, nil,  {:class=>'form-control'})%>
      </div>
      <%=submit_tag 'Login', class: 'btn btn-success'%>
    <%end%>
  </div>
    

